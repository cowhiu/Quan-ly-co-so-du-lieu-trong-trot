<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="test2.Windows.ForgotPasswordWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quen mat khau" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#ecf0f1">
 <Border Background="White" CornerRadius="10" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
   <StackPanel>
     <TextBlock Text="QUEN MAT KHAU" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2c3e50" Margin="0,0,0,10"/>
      <TextBlock Text="Nhap email da dang ky de nhan lien ket dat lai mat khau" TextWrapping="Wrap" HorizontalAlignment="Center" Foreground="#666" Margin="0,0,0,20"/>
     <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
       <TextBox x:Name="txtEmail" Padding="12" FontSize="14" Margin="0,0,0,20"/>
<Button Content="Gui yeu cau" Padding="12" Background="#27ae60" Foreground="White" FontSize="14" FontWeight="SemiBold" Click="BtnGui_Click"/>
   <Button Content="Huy" Padding="12" Background="#95a5a6" Foreground="White" FontSize="14" Margin="0,10,0,0" Click="BtnHuy_Click"/>
      </StackPanel>
   </Border>
    </Grid>
</Window>
