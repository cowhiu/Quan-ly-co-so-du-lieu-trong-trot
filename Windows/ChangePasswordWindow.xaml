<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="test2.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doi mat khau" Height="380" Width="400"
 WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#ecf0f1">
        <Border Background="White" CornerRadius="10" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <StackPanel>
      <TextBlock Text="DOI MAT KHAU" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2c3e50" Margin="0,0,0,20"/>
    <TextBlock Text="Mat khau hien tai:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <PasswordBox x:Name="txtMatKhauCu" Padding="10" FontSize="14" Margin="0,0,0,12"/>
           <TextBlock Text="Mat khau moi:" FontWeight="SemiBold" Margin="0,0,0,5"/>
 <PasswordBox x:Name="txtMatKhauMoi" Padding="10" FontSize="14" Margin="0,0,0,12"/>
    <TextBlock Text="Xac nhan mat khau:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtXacNhan" Padding="10" FontSize="14" Margin="0,0,0,20"/>
      <Button Content="Doi mat khau" Padding="12" Background="#e74c3c" Foreground="White" FontSize="14" FontWeight="SemiBold" Click="BtnDoiMatKhau_Click"/>
     <Button Content="Huy" Padding="12" Background="#95a5a6" Foreground="White" FontSize="14" Margin="0,10,0,0" Click="BtnHuy_Click"/>
  </StackPanel>
     </Border>
    </Grid>
</Window>
