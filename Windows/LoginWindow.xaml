<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="test2.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dang nhap he thong" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
  <Grid Background="#ecf0f1">
        <Border Background="White" CornerRadius="10" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <StackPanel>
 <TextBlock Text="DANG NHAP" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2c3e50" Margin="0,0,0,25"/>
     <TextBlock Text="Ten dang nhap:" FontWeight="SemiBold" Margin="0,0,0,5"/>
  <TextBox x:Name="txtUsername" Padding="12" FontSize="14" Margin="0,0,0,15"/>
        <TextBlock Text="Mat khau:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <PasswordBox x:Name="txtPassword" Padding="12" FontSize="14" Margin="0,0,0,20"/>
<Button Content="Dang nhap" Padding="12" Background="#3498db" Foreground="White" FontSize="14" FontWeight="SemiBold" Click="BtnDangNhap_Click"/>
      <Button Content="Huy" Padding="12" Background="#95a5a6" Foreground="White" FontSize="14" Margin="0,10,0,0" Click="BtnHuy_Click"/>
      </StackPanel>
        </Border>
    </Grid>
</Window>
