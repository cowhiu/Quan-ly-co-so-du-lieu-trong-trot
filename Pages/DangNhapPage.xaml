<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="test2.Pages.DangNhapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900" Title="Dang nhap">
    <Grid>
   <Border Background="White" CornerRadius="10" Padding="40" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
    <StackPanel>
      <TextBlock Text="DANG NHAP HE THONG" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2c3e50" Margin="0,0,0,30"/>
       <TextBlock Text="Ten dang nhap:" FontWeight="SemiBold" Margin="0,0,0,5"/>
  <TextBox x:Name="txtUsername" Padding="12" FontSize="14" Margin="0,0,0,15"/>
    <TextBlock Text="Mat khau:" FontWeight="SemiBold" Margin="0,0,0,5"/>
    <PasswordBox x:Name="txtPassword" Padding="12" FontSize="14" Margin="0,0,0,20"/>
     <Button Content="Dang nhap" Padding="15" Background="#3498db" Foreground="White" FontSize="14" FontWeight="SemiBold" Click="BtnDangNhap_Click"/>
  <TextBlock Text="Quen mat khau?" HorizontalAlignment="Center" Foreground="#3498db" Margin="0,15,0,0" Cursor="Hand" MouseLeftButtonDown="QuenMatKhau_Click"/>
</StackPanel>
   </Border>
 </Grid>
</Page>
