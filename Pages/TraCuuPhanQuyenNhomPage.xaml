<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="test2.Pages.TraCuuPhanQuyenNhomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900" Title="Tra cuu phan quyen nhom">
    <Grid Margin="20">
        <Grid.RowDefinitions>
   <RowDefinition Height="Auto"/>
       <RowDefinition Height="Auto"/>
     <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="TRA CUU PHAN QUYEN NHOM NGUOI DUNG" FontSize="20" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20"/>
        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="20" Margin="0,0,0,15">
 <WrapPanel>
      <StackPanel Margin="0,0,20,10" Width="200">
  <TextBlock Text="Nhom:" FontWeight="SemiBold" Margin="0,0,0,5"/>
 <ComboBox x:Name="cboNhom" Padding="8"/>
  </StackPanel>
       <StackPanel Margin="0,0,20,10" Width="200">
     <TextBlock Text="Quyen:" FontWeight="SemiBold" Margin="0,0,0,5"/>
   <ComboBox x:Name="cboQuyen" Padding="8"/>
    </StackPanel>
     <Button Content="Tra cuu" Padding="20,10" Background="#3498db" Foreground="White" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="BtnTraCuu_Click"/>
    <Button Content="Lam moi" Padding="20,10" Background="#95a5a6" Foreground="White" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="BtnLamMoi_Click"/>
       </WrapPanel>
 </Border>
     <DataGrid x:Name="dgKetQua" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" Background="White" CanUserAddRows="False">
    <DataGrid.Columns>
       <DataGridTextColumn Header="Nhom" Binding="{Binding TenNhom}" Width="*"/>
   <DataGridTextColumn Header="Quyen" Binding="{Binding TenQuyen}" Width="200"/>
    <DataGridCheckBoxColumn Header="Duoc phep" Binding="{Binding DuocPhep}" Width="80"/>
       </DataGrid.Columns>
        </DataGrid>
 </Grid>
</Page>
