<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="test2.Pages.DoiMatKhauPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900" Title="Doi mat khau">
    <Grid>
  <Border Background="White" CornerRadius="10" Padding="40" VerticalAlignment="Center" HorizontalAlignment="Center" Width="450">
     <StackPanel>
   <TextBlock Text="DOI MAT KHAU" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2c3e50" Margin="0,0,0,30"/>
      <TextBlock Text="Mat khau hien tai:" FontWeight="SemiBold" Margin="0,0,0,5"/>
     <PasswordBox x:Name="txtMatKhauCu" Padding="12" FontSize="14" Margin="0,0,0,15"/>
    <TextBlock Text="Mat khau moi:" FontWeight="SemiBold" Margin="0,0,0,5"/>
       <PasswordBox x:Name="txtMatKhauMoi" Padding="12" FontSize="14" Margin="0,0,0,15"/>
  <TextBlock Text="Xac nhan mat khau moi:" FontWeight="SemiBold" Margin="0,0,0,5"/>
      <PasswordBox x:Name="txtXacNhanMatKhau" Padding="12" FontSize="14" Margin="0,0,0,20"/>
   <Button Content="Doi mat khau" Padding="15" Background="#e74c3c" Foreground="White" FontSize="14" FontWeight="SemiBold" Click="BtnDoiMatKhau_Click"/>
     </StackPanel>
      </Border>
    </Grid>
</Page>
